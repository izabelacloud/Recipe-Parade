<div class="card">
    <h3 class="card-header">Edit Recipe</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{recipe.title}}" class="form-input" />


        <label class="form-label" for="ingredients">Ingredients</label>
        <input name="ingredients" type="text" value="{{recipe.ingredients}}" class="form-input" />

        <label class="form-label" for="directions">Directions</label>
        <input name="directions" type="text" value="{{recipe.directions}}" class="form-input" />

        <button type="submit" class="btn">Update Recipe</button>
        <button type="button" class="delete-recipe-btn btn">Delete Recipe</button>
    </form>
</div>


<script src="/javascript/edit-recipe.js"></script>
<script src="/javascript/delete-recipe.js"></script>
